{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "https://REPLACE_WITH_BACKEND_URL/api/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
