{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "https://REPLACE_WITH_BACKEND_URL/api/:path*" },
    { "source": "/:path*", "destination": "/index.html" }
  ]
}
